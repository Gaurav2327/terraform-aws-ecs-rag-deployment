{
  "manifest_version": 3,
  "name": "RAG Assistant",
  "version": "1.1",
  "description": "Ask questions about web pages and uploaded documents (PDF, CSV) using Bedrock RAG",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["http://localhost:3000/*"],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png"
    }
  },
  "web_accessible_resources": [
    {
      "resources": ["libs/pdf.worker.min.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
